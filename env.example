# =================================================================================
# Environment Variables for VALD Report Generator
# Copy this file to .env and fill in your actual credentials
# =================================================================================

# Google Cloud Platform Configuration
GCP_CREDENTIALS_PATH=gcp_credentials.json
GCP_PROJECT_ID=vald-ref-data

# VALD API Configuration
VALD_CLIENT_ID=your_vald_client_id_here
VALD_CLIENT_SECRET=your_vald_client_secret_here
VALD_AUTH_URL=https://security.valdperformance.com/connect/token

# File Paths (optional - will use defaults if not set)
OUTPUT_DIR=Output CSVs
MEDIA_DIR=Media
PDF_OUTPUT_DIR=PDF Reports
TOKEN_CACHE_FILE=.token_cache.json
